<h1>Hello, Here is the list of flats</h1>

<div class="container">
  <ul>
    <% @flats.each do |flat| %>
      <li><%= link_to flat.title, flat_path(flat) %>: <%= flat.location %></li>
    <% end %>
  </ul>
</div>

<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
